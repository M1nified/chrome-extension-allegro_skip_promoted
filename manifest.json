{
    "name": "Znajdź listę ofert w Allegro",
    "version": "1.0",
    "description": "Znajduje i otwiera stronę z listą ofert niepromowanych.",
    "manifest_version": 2,
    "author": "M1nified",
    "minimum_chrome_version": "70",
    "icons": {
        "38": "icons/icon_38.png",
        "128": "icons/icon_128.png",
        "470": "icons/icon_470.png"
    },
    "options_ui": {
        "chrome_style": true,
        "page": "options.html"
    },
    "page_action": {
        "default_title": "Znajdź listę ofert w Allegro",
        "default_icon": "icons/icon_38.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "declarativeContent",
        "activeTab",
        "https://allegro.pl/*",
        "http://allegro.pl/*",
        "storage"
    ]
}